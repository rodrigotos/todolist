<div id="fullscreen_bg" class="fullscreen_bg" />
<h1 class="form-signin-heading">To Do List</h1>
<div class="container">

<%= form_for(resource, as: resource_name, class: "form-signin", url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true , class: "form-control", type: "text", placeholder: "Email Adress"%>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class: "form-control", type: "password", placeholder: "Password", required: true%>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", type: "confirm", placeholder: "Confirm password"%>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up", class: "tn btn-lg boton-color btn-block", type: "submit" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>
