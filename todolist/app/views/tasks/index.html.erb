<div class="container">
  <h1 class="text-center"> Tasks </h1>
  <section class="row text-center cities-controls">
      <a href="<%= new_airline_path %>" class="btn btn-default"> New Airline </a>
  </section>
  <% @airlines.each do |a| %>
    <article class="row city">
      <ul>
        <li class="col-md-2"><strong><%= a.name %></strong></li>
        <li class="col-md-1"><a href="<%= airline_path(a.id) %>" data-method="delete" class="btn btn-danger"> Delete </a></li>
        <li class="col-md-1"><a href="<%= edit_airline_path(a.id) %>" class="btn btn-primary"> Edit </a></li>
        <li class="col-md-1"><a href="<%= airline_path(a.id) %>" class="btn btn-info"> Show </a></li>
      </ul>
    </article>
  <% end if @airlines.any? %>
</div>
